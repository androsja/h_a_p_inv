# ============================================================
#  Copia este archivo como .env y rellena tus credenciales
# ============================================================

# ── HAPI TRADE CREDENTIALS ─────────────────────────────────
HAPI_API_KEY=your_api_key_here
HAPI_CLIENT_ID=your_client_id_here
HAPI_USER_TOKEN=your_user_token_here

# ── MODO DE OPERACIÓN ──────────────────────────────────────
# Opciones: LIVE | SIMULATED
TRADING_MODE=SIMULATED

# ── MODO SANDBOX (TEST) DE HAPI ────────────────────────────
# true  → Hapi recibe órdenes pero NO usa dinero real
# false → Órdenes reales (CUIDADO)
HAPI_IS_TEST_MODE=true

# ── GESTIÓN DE RIESGO ──────────────────────────────────────
STOP_LOSS_PCT=0.01          # 1% de Stop-Loss por operación
TAKE_PROFIT_PCT=0.02        # 2% de Take-Profit por operación
MAX_POSITION_USD=500        # Capital máximo por operación
CLEARING_COST_USD=0.15      # Costo de cámara Apex por cierre

# ── LATENCIA ───────────────────────────────────────────────
LATENCY_OFFSET_CENTS=2      # Centavos de ajuste en órdenes límite
                            # (para compensar la latencia Bogotá→NY)

# ── LOGS ───────────────────────────────────────────────────
LOG_LEVEL=INFO              # DEBUG | INFO | WARNING | ERROR
LOG_FILE=logs/trading_bot.log
